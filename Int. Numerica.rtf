# Par\'e2metros do problema\
c = 1       # Coeficiente cin\'e9tico\
m = 1       # \'cdndice topol\'f3gico\
r_tilde = -1 # Par\'e2metro linear\
u = 1 / 4    # Coeficiente c\'fabico\
\
# Definir a equa\'e7\'e3o diferencial\
def ode_system(r, phi):\
    """\
    Representa a equa\'e7\'e3o diferencial:\
    - (c/r) d/dr [r dphi/dr] + c m^2 (phi/r^2) + r_tilde * phi + 4u * phi^3 = 0\
    """\
    dphi_dr = phi[1]\
    d2phi_dr2 = (\
        -(1 / r) * phi[1]\
        + (m**2 / r**2) * phi[0]\
        + r_tilde * phi[0]\
        + 4 * u * phi[0]**3\
    ) / c\
    return np.vstack((dphi_dr, d2phi_dr2))\
\
# Condi\'e7\'f5es de contorno\
def boundary_conditions(phi0, phi_inf):\
    """\
    Condi\'e7\'f5es de contorno:\
    - phi(0) = 0 (regularidade na origem)\
    - phi(r -> inf) = phi_0\
    """\
    phi_0 = np.sqrt(-r_tilde / (2 * u))  # Valor uniforme de phi_0\
    return np.array([phi0[0], phi_inf[0] - phi_0])\
\
